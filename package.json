{
  "name": "turborepo-sample",
  "version": "0.0.0",
  "description": "Front-end monorepo",
  "author": "Enrique Ram√≠rez <hello@enrique-ramirez.com>",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "start": "turbo run start --parallel",
    "test": "turbo run test --parallel",
    "chore:format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "chore": "npm-run-all chore:*",
    "chore:sync-dependencies": "syncpack fix-mismatches",
    "chore:update-dependencies": "turbo run chore:update-dependencies --concurrency=1",
    "commit": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@commitlint/cz-commitlint": "17.1.2",
    "eslint-config-custom": "workspace:*",
    "commitizen": "4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.1",
    "inquirer": "9.1.1",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "latest",
    "syncpack": "8.2.4",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.11.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{css,less,scss,html,json,jsx,js,ts,tsx,mdx,md}": [
      "prettier --write ."
    ],
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{ts,tsx}": "tsc"
  }
}
